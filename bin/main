#!/usr/bin/env ruby
require_relative '../lib/logic'
require_relative '../lib/game'

game = Game.new
indexes_win = [[1, 5, 9], [1, 2, 3], [1, 4, 7], [2, 5, 8], [3, 5, 7], [3, 6, 9], [4, 5, 6], [7, 8, 9]]
system('clear') || system('cls')
puts "Welcome to our amazing Tic Tac Toe !!\n\n\n"

game.gaming(indexes_win)

puts "\n Game over!"

print " \n Do you want do play again? (Y/N): "
choice = gets.chomp
inside = true if choice == 'Y'
while inside
  game = Game.new
  system('clear') || system('cls')
  puts "Welcome to our amazing Tic Tac Toe !!\n\n\n"
  game.gaming(indexes_win)
  print 'Do you want do play again? (Y/N): '
  choice = gets.chomp
  inside = false unless choice == 'Y'
end

puts 'Good Bye'
